<div class="container register">
  <div class="row justify-content-center">
    <div class="form col-6">
      <h1 class="text-center mb-3">Register</h1>

      <form method="post" action="/register">
          <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Username" required>
          </div>

          <div class="form-group">
            <input type="email" name="email" class="form-control" placeholder="Email" required">
          </div>    

          <div class="form-group">
            <input type="password" name="createPassword" id="createPassword" class="form-control" placeholder="Create Password" required>
          </div>
    
          <div class="form-group">
            <input type="password" name="confirmPassword" class="form-control" data-match="#createPassword" data-match-error="Whoops, these don't match" placeholder="Confirm Password" required>
            <div class="help-block with-errors"></div>
          </div>          

          <div class="form-inline justify-content-end">
            <a class="btn btn-default" href="/">Go Back</a>
            <button type="submit" class="btn">Sign Up</button>
          </div>
      </form>
    </div>
</div>
